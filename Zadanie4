#include <stdio.h>

int main()
{
int w=0, s=0, g=0, n;
printf("Podaj liczbe wierszy\n");
scanf("%d", &n);
for(w = 0; w < n; w++, g=0)
    {
    for(s = 0; s <= n-w; s++)
        printf(" ");
    while(g <= 2*w)
        {
        printf("*");
        g++;
        }
    printf("\n");
    }
return 0;
}
